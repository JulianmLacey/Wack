<div class="d-flex justify-content-center mt-5">
    <h1>{{project.name}}</h1>
</div>


<div class="text-center">
    <h2 class="m-5 text-decoration-underline">Mission Statement</h2>
    <p class="mb-5">{{project.missions_statement}}</p>
</div>

<div class=" col-sm">
    <div class="container ">
        <h3 class="text-center m-3 text-decoration-underline">Tasks</h3>
        <div class="row">
            <div class="col-sm m-3">
                {{#each project.tasks}}
                <div class="row m-3">
                    <h5>To Do: {{this.taskName}}</h5>
                    <p>Description : {{this.description}}</p>
                    <button class="complete-task-btns" data-task-id="{{this.id}}">Complete</button>
                </div>
                {{/each}}
            </div>
        </div>
        {{#if loggedIn}}
        <form id="task-form" class="d-flex justify-content-end">
            <textarea id="task-name" placeholder="Task Name"class="form-control m-2"></textarea>
            <textarea id="task-description" placeholder="Description"class="form-control m-2"></textarea>
            <button type="submit" id="task-btn" class="btn btn-primary m-2">Submit</button>
        </form>
        {{else}}
        <h4>Must <span><a href="/login">log in</a></span> to add task</h4>
        {{/if}}
    </div>
</div>
<div class="container">
    <h3 class="d-flex justify-content-center m-4 text-decoration-underline">Comments</h3>
    {{#each project.comments}}
    <div class="row">
        <div class="col-sm m-3">
            <h5>{{this.user.name}}</h5>
        </div>
        <div class="col-sm m-3">
            <p>{{this.content}}</p>
        </div>
    </div>
    {{/each}}
    {{#if loggedIn}}
    <div class="d-flex justify-content-center">
    <form id="comment-form">
        <textarea id="content" placeholder="Add Comment" class="form-control w-500 h-100"></textarea>
        <div class="d-flex justify-content-center">
        <button id="comment-btn" class="btn btn-primary m-2" >Add Comment</button>
        </div>
    </div>
    </form>
    {{else}}
    <h4>Must <span><a href="/login">log in</a></span> to comment</h4>
    {{/if}}
</div>



<script src="/js/comment.js"></script>